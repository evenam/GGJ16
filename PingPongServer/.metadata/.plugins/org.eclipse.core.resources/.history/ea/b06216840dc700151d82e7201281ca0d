package server;

import java.net.*;
import java.io.*;

public class ClientConnection implements Runnable 
{
	private Socket socket;
	private String name;
	private boolean running;
	
	public ClientConnection(Socket sock)
	{
		socket = sock;
		
		Thread t = new Thread(this);
		t.start();
	}
	
	
	public void run() 
	{
		while (running)
		{
			if (socket.isConnected())
			{
				
			}
			else
			{
				System.out.println("Spontaneous disconnection.");
				running = false;
			}
		}
		clean();
	}
	
	public void clean()
	{
		
	}
	
	synchronized public String getName()
	{
		return name;
	}
	
	synchronized public void setName(String newName)
	{
		name = newName;
	}
}
